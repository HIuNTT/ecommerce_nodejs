{
    "$schema": "https://json.schemastore.org/nest-cli",
    "collection": "@nestjs/schematics",
    "sourceRoot": "src",
    "compilerOptions": {
        "deleteOutDir": true,
        "assets": [{ "include": "templates/**/*", "outDir": "./dist/src" }],
        "watchAssets": true,
        "plugins": [
            {
                "name": "@nestjs/swagger",
                "options": {
                    "introspectComments": true
                }
            }
        ]
    }
}
